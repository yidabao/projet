<h1>Listing students</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Birthday</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.surname %></td>
        <td><%= student.birthday %></td>
        <td><%= link_to 'Show', student, class:"button button-primary button-rounded button-small" %></td>
        <td><%= link_to 'Edit', edit_student_path(student) , class:"button button-primary button-pill button-small"%></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } , class:"button button-primary button-pill button-small"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path , class:"button button-action button-rounded"%>
